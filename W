public class Main {
    public static void main(String[] args) {
        int n = 7;
        
        for (int i = 0; i < n; i++) {
            for (int j = 0; j <= n * 4; j++) {
                    if (j == i || j == n* 2 - i || j == n * 2 + i || j == n* 4 - i) {
                    System.out.print("*");
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}
